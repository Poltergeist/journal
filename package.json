{
  "name": "journal",
  "version": "0.1.0",
  "description": "this is a git based journal",
  "main": "README.md",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild":
      "rimraf dist && mkdir dist && echo \"# Journal\n\n\" > dist/index.md",
    "build":
      "git log --format=\"## %s %n%n %b %n\" --grep=\"--exclude\" --invert-grep >> dist/index.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Poltergeist/journal.git"
  },
  "keywords": ["journal", "blog"],
  "author": "Poltergeist",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Poltergeist/journal/issues"
  },
  "homepage": "https://github.com/Poltergeist/journal#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/journal-log"
    }
  },
  "dependencies": {
    "gh-pages": "^1.1.0",
    "rimraf": "^2.6.2"
  }
}
